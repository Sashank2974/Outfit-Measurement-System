# Environment Variables Template
# Copy this file to .env and update with your values

# ============================================
# APPLICATION
# ============================================
APP_NAME="AI Body Measurement System"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG="True"

# ============================================
# DATABASE
# ============================================
# PostgreSQL
POSTGRES_USER="admin"
POSTGRES_PASSWORD="changeme123"
POSTGRES_DB="body_measurement_db"
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# MongoDB
MONGO_USER="admin"
MONGO_PASSWORD="changeme123"
MONGO_DB="body_measurement_logs"
MONGO_HOST="localhost"
MONGO_PORT="27017"
MONGODB_URL="mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}"

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_URL="redis://${REDIS_HOST}:${REDIS_PORT}"

# ============================================
# SECURITY
# ============================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000"

# ============================================
# AI MODEL
# ============================================
AI_MODEL_URL="http://localhost:5000"
AI_MODEL_TIMEOUT="30"
AI_MODEL_VERSION="1.0.0"

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR="uploads"
MAX_UPLOAD_SIZE="10485760"  # 10MB in bytes
ALLOWED_EXTENSIONS="jpg,jpeg,png,webp"

# ============================================
# MEASUREMENT SETTINGS
# ============================================
MIN_CONFIDENCE_THRESHOLD="0.7"
AUTO_DELETE_IMAGES="True"
IMAGE_RETENTION_HOURS="24"

# ============================================
# EMAIL (Optional)
# ============================================
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@bodymeasurement.ai"

# ============================================
# CLOUD STORAGE (Optional)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Google Cloud Storage
GCP_PROJECT_ID=""
GCP_BUCKET_NAME=""
GCP_CREDENTIALS_PATH=""

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=""
LOG_LEVEL="INFO"

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_APP_NAME="AI Body Measurement"
